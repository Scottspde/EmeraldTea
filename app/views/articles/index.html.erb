<%= render 'layouts/nav'%>

<section class="bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="blog-heading text-uppercase">Blog Posts</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-left">
        <ul class="container-fluid">
        <% @articles.reverse.each do |article| %>
          <li>
            <a href="<%= article_path(article) %>">
              <div class="text-heading ">
                <h4 class="text-heading"><%= article.title %></h4>
              </div>
              <div>
                <p class="text-muted"> 
                <%= article.text%>
                </p>
              </div>
            </a>
            <div>
               <a class="btn btn-primary btn-xl text-uppercase text-secondary align-right" href="<%= edit_article_path(article) %>">Edit</a>
            </div>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>

<%= link_to  "New article", new_article_path %>